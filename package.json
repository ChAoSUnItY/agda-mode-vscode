{
	"name": "agda-mode",
	"displayName": "agda-mode",
	"description": "agda-mode on vscode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.load"
	],
	"main": "./lib/js/src/Main.bs.js",
	"contributes": {
		"languages": [
			{
				"id": "agda",
				"extensions": [
					".agda"
				],
				"aliases": [
					"Agda"
				],
				"filenames": []
			}
		],
		"commands": [
			{
				"command": "extension.load",
				"title": "Load"
			},
			{
				"command": "extension.quit",
				"title": "Quit"
			},
			{
				"command": "extension.nextGoal",
				"title": "Next Goal"
			}
		],
		"keybindings": [
			{
				"command": "extension.load",
				"key": "ctrl+c ctrl+l",
				"mac": "ctrl+c ctrl+l"
			},
			{
				"command": "extension.quit",
				"key": "ctrl+c ctrl+q",
				"mac": "ctrl+c ctrl+q"
			},
			{
				"command": "extension.nextGoal",
				"key": "ctrl+c ctrl+f",
				"mac": "ctrl+c ctrl+f"
			}
		],
		"configuration": {
			"title": "Agda Mode",
			"properties": {
				"agdaMode.agdaPath": {
					"type": "string",
					"default": "",
					"scope": "machine-overridable",
					"description": "Path to the executable of Agda, automatically inferred when possible. Overwrite to override."
				},
				"agdaMode.libraryPath": {
					"type": "string",
					"default": "",
					"scope": "machine-overridable",
					"description": "Paths to include (such as agda-stdlib), seperate with comma. Useless after Agda 2.5.0."
				},
				"agdaMode.highlightingMethod": {
					"type": "string",
					"default": "Direct",
					"enum": [
						"Direct",
						"Indirect"
					],
					"scope": "machine-overridable",
					"description": "Receive highlighting information from Agda, directly via stdio, or indirectly via temporary files (which mwy require frequent disk access)."
				}
			}
		}
	},
	"scripts": {
		"test": "node ./test/runTest.js",
		"build": "bsb -make-world && npx webpack --mode=production",
		"watch-style": "npx less-watch-compiler style/ dist/",
		"watch-view": "npm run watch-style & npx webpack --mode=production --watch",
		"watch-code": "npx webpack --mode=production --watch",
		"watch": "npm run watch-view",
		"clean": "bsb -clean-world"
	},
	"devDependencies": {
		"less-loader": "^5.0.0",
		"less-watch-compiler": "^1.14.6",
		"vscode-test": "^1.2.2",
		"webpack": "^4.42.0",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"@glennsl/bs-json": "^5.0.1",
		"agda-mode": "github:banacorn/agda-mode#dev",
		"bs-nd": "^0.1.5",
		"bs-let": "^0.1.11",
		"bs-platform": "^7.2",
		"bs-webapi": "^0.15.3",
		"reason-promise": "^1.0.1",
		"react": "^16.9.0",
		"react-dom": "^16.9.0",
		"reason-react": ">=0.7.0",
		"reason-react-update": "^0.1.1",
		"guacamole": "github:scmlab/gcl-vscode#8e37c57"
	}
}